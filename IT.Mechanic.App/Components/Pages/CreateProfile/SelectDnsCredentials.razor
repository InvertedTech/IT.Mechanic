@inject NavigationManager Navigation
@page "/create/select-credentials/{credentialProvider}"
@using IT.Mechanic.Models.Configuration

<MudText Typo="Typo.h4">Select DNS Credentials</MudText>
<MudPaper Width="300">
    <MudSelect T="string" Label="Credentials">
        <MudSelectItem Value="@("New")" />
    </MudSelect>
    <IT.Mechanic.App.Components.Buttons.NavButtonGroup BackRoute="/create/select-product" ForwardRoute="/create/select-server-host" />
</MudPaper>

@code {
    [Parameter]
    public string CredentialProvider { get; set; }

    public void OnBackClicked()
    {
        Navigation.NavigateTo("/create/select-product");
    }

    public void OnNextClicked()
    {
        Navigation.NavigateTo($"/create/select-server-host");
    }
}
