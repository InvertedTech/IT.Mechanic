@using IT.Mechanic.App.Services.Profiles
@using IT.Mechanic.Models.Configuration
@page "/create/select-dns-host"
@inject IProfileFactory ProfileFactory

<MudPaper Width="300">
    <MudCard Elevation="20">
        <MudCardHeader>
            <MudText Typo="Typo.h4">Select DNS Provider</MudText>
        </MudCardHeader>
        <MudCardContent>
            <MudText Typo="Typo.h6">This Is Where You Bought The Domain From.</MudText>
            <MudRadioGroup T="DNSModel.ProviderEnum" @bind-Value="ProfileFactory.DNS.Provider">
                <MudRadio Value="DNSModel.ProviderEnum.Godaddy">GoDaddy</MudRadio>
            </MudRadioGroup>
        </MudCardContent>
        <MudCardActions>
            <IT.Mechanic.App.Components.Buttons.NavButtonGroup BackRoute="/create/select-product" ForwardRoute=@($"/create/select-dns-credentials?provider={ProfileFactory.DNS.Provider.ToString()}") />
        </MudCardActions>
    </MudCard>
</MudPaper>
