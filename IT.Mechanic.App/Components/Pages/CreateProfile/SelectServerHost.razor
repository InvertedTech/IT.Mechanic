@inject NavigationManager Navigation
@page "/create/select-server-host"
<MudText Typo="Typo.h4">Select Your Server Hosting Provider</MudText>
<MudPaper Width="300">
    <MudButtonGroup Variant="Variant.Filled" Color="Color.Primary">
        <MudButton @onclick="() => OnBackClicked()">Back</MudButton>
        @* <MudButton @onclick="() => OnNextClicked()">Next</MudButton> *@
    </MudButtonGroup>
</MudPaper>

@code {
    public void OnBackClicked()
    {
        Navigation.NavigateTo("/create/select-dns-host");
    }

    public void OnNextClicked()
    {
        Navigation.NavigateTo($"/create/select-dns-host");
    }
}
