@using IT.Mechanic.Models.Configuration

<MudSelect T="ServerModel.HostingProviderEnum" Value="@HostingProvider" ValueChanged="@HostingProviderChanged">
    @foreach (var provider in ServerModel.GetHostingProvidersNames())
    {
        <MudSelectItem Value="ServerModel.GetHostingProviderFromName(provider)">@provider</MudSelectItem>
    }
</MudSelect>

@code {
    [Parameter]
    public ServerModel.HostingProviderEnum HostingProvider { get; set; }

    [Parameter]
    public EventCallback<ServerModel.HostingProviderEnum> HostingProviderChanged { get; set; }
}
