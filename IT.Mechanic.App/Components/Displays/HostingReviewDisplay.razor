@using IT.Mechanic.Models.Configuration
<MudCard Class="mr-auto ml-auto" Elevation="20">
    <MudCardHeader>
        <MudText>Review Server Configuration</MudText>
    </MudCardHeader>
    <MudCardContent>
        <MudStack Row="true">
            <MudText>Server Provider</MudText>
            <MudTextField Disabled="true" @Value="@Server.HostingProvider" T="ServerModel.HostingProviderEnum"/>
        </MudStack>
        <MudStack Row="true">
            <MudText>Server Name</MudText>
            <MudTextField Disabled="true" Value="@Server.ServerName" />
        </MudStack>
        <MudStack Row="true">
            <MudText>Server User</MudText>
            <MudTextField Disabled="true" Value="@Server.User" />
        </MudStack>
        <MudStack Row="true">
            <MudText>Public IP:</MudText>
            <MudTextField Disabled="true" Value="@Server.PublicIP" />
        </MudStack>
        <MudStack Row="true">
            <MudText>SSHPrivateKey:</MudText>
            <MudTextField Disabled="true" Value="@Server.SSHPrivateKey" />
        </MudStack>
    </MudCardContent>
</MudCard>

@code {
    [Parameter]
    public ServerModel Server { get; set; }
}
