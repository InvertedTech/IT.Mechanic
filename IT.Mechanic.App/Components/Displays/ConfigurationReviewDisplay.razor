@using IT.Mechanic.Models.Configuration

<MudCard Class="mr-auto ml-auto" Elevation="20">
    <MudCardHeader>
        <MudText>Review Site Configuration</MudText>
    </MudCardHeader>
    <MudCardContent>
        <MudStack Row="true">
            <MudText>Website Type:</MudText>
            <MudTextField Disabled="true" Value="@WebsiteType" />
        </MudStack>
        <MudStack Row="true">
            <MudText>DNS Provider</MudText>
            <MudTextField Disabled="true" Value="@DNSProvider" />
        </MudStack>
        <MudStack Row="true">
            <MudText>Server Provider</MudText>
            <MudTextField Disabled="true" Value="@HostingProvider" />
        </MudStack>
    </MudCardContent>
</MudCard>


@code {
    [Parameter]
    public DNSModel.ProviderEnum DNSProvider { get; set; }

    [Parameter]
    public ProductSelectionModel.WebsiteTypes WebsiteType { get; set; }

    [Parameter]
    public ServerModel.HostingProviderEnum HostingProvider { get; set; }
}
