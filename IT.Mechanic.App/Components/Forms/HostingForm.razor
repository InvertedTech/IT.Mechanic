@namespace IT.Mechanic.App.Components.Forms
@using IT.Mechanic.App.Helpers
@using IT.Mechanic.App.Services.Profiles
@using IT.Mechanic.Models.Configuration
@using IT.Mechanic.Models.Configuration.Hosting
<MudCard Elevation="20" Class="ml-auto mr-auto">
        <MudCardHeader>
            <MudText>Set @Provider Host Settings</MudText>
        </MudCardHeader>
        <MudCardContent>
            <MudForm @ref="_form">
                <MudTextField 
                    Label="Server Sku" 
                    T="string"
                    Value="@ServerSKU" 
                    ValueChanged="@ServerSkuChanged"
                    Required="true" 
                    RequiredError="Required" />
                <IT.Mechanic.App.Components.Pickers.ServerLocationPicker ServerLocationValue="@ServerLocation" ServerLocationValueChanged="@ServerLocationChanged" />
            </MudForm>
        </MudCardContent>
</MudCard>

    @code {
    [Parameter]
    public IProfileFactory Factory { get; set; }

    [Parameter]
    public ServerModel.HostingProviderEnum Provider { get; set; }

    [Parameter]
    public string ServerSKU { get; set; } = string.Empty;

    [Parameter]
    public EventCallback<string> ServerSkuChanged { get; set; }

    [Parameter]
    public string ServerLocation { get; set; } = string.Empty;

    [Parameter]
    public EventCallback<string> ServerLocationChanged { get; set; }

    private MudForm _form;
}
