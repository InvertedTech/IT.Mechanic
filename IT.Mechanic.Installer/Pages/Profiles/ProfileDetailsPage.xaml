<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IT.Mechanic.Installer.Pages.Profiles.ProfileDetailsPage"
             xmlns:btns="clr-namespace:IT.Mechanic.Installer.Components.Buttons"
             Title="Profile Details">
    <VerticalStackLayout Spacing="20" Padding="15">
        <Label 
            x:Name="SiteIdLabel"
            FontSize="24"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label 
            x:Name="DomainNameLabel"
            FontSize="18"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label 
            x:Name="HostingProviderLabel"
            FontSize="18"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label 
            x:Name="WebsiteTypeLabel"
            FontSize="18"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <btns:LinkButton Text="Back" Link="//MainPage" />
    </VerticalStackLayout>
</ContentPage>
