<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IT.Mechanic.Installer.Pages.Hosting.DigitalOceanHostingPage"
             Title="DigitalOceanHostingPage">
    <VerticalStackLayout>
        <HorizontalStackLayout HorizontalOptions="Center">
            <Button
            x:Name="BackBtn"
            Text="Back" 
            SemanticProperties.Hint="Advances To The Previous Section"
            Clicked="OnBackClicked"
            Margin="2"
            HeightRequest="60"
            WidthRequest="100"
        />
            <Button
            x:Name="NextBtn"
            Text="Next" 
            SemanticProperties.Hint="Advances To The Next Section"
            Clicked="OnNextClicked"
            Margin="2"
            HeightRequest="60"
            WidthRequest="100"
        />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>