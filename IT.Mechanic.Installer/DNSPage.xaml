<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IT.Mechanic.Installer.DNSPage"
             xmlns:buttons="clr-namespace:IT.Mechanic.Installer.Components.Buttons"
             Title="DNS Settings">
    <VerticalStackLayout>
        <Label
            Text="Set Your DNS Provider"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1" />
        <RadioButton Content="GoDaddy" />

        <Label
            Text="Enter Your Domain Name"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1" />
        <Entry 
            x:Name="dnsEntry"
            Placeholder="example.com"
            Text="{Binding dnsModel.DomainName, Mode=TwoWay}"
        />

        <buttons:NavigationButtonGroup
        NextRoute="//Server"
        BackRoute="///ProductSelect"
        />
    </VerticalStackLayout>
</ContentPage>