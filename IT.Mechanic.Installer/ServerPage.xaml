<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IT.Mechanic.Installer.ServerPage"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="Server Settings">
    <toolkit:DockLayout HorizontalOptions="Center">
        <Label
            toolkit:DockLayout.DockPosition="Top"
            Text="Select A Hosting Provider"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1" />
        <VerticalStackLayout toolkit:DockLayout.DockPosition="None">
            <RadioButton CheckedChanged="OnCheckedChanged" Content="Expert Mode" />
            <RadioButton CheckedChanged="OnCheckedChanged" Content="Rumble" />
            <RadioButton CheckedChanged="OnCheckedChanged" Content="Digital Ocean" />
            <RadioButton CheckedChanged="OnCheckedChanged" Content="Azure" />
            <RadioButton CheckedChanged="OnCheckedChanged" Content="AWS" />
            <RadioButton CheckedChanged="OnCheckedChanged" Content="GCP"/>
            <RadioButton CheckedChanged="OnCheckedChanged" Content="Inverted Tech" />
        </VerticalStackLayout>

