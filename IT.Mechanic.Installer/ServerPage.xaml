<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IT.Mechanic.Installer.ServerPage"
             xmlns:buttons="clr-namespace:IT.Mechanic.Installer.Components.Buttons"
             Title="Server Settings">
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Label 
                Text="Expert Mode: "
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
            <Switch
                IsToggled="{Binding IsExpertMode, Mode=TwoWay}" />
        </HorizontalStackLayout>

        <Label
            Text="Select A Hosting Provider"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1" />
        <RadioButton Content="Expert Mode" />
        <RadioButton Content="Rumble" />
        <RadioButton Content="Digital Ocean" />
        <RadioButton Content="Azure" />
        <RadioButton Content="AWS" />
        <RadioButton Content="GCP" />
        <RadioButton Content="InvertedTech" />


        <Label Text="Server Name" />
        <Entry 
            x:Name="serverNameEntry"
            Placeholder="Example Server"
            Text="{Binding serverModel.ServerName, Mode=TwoWay}"
        />

        <Label Text="User" />
        <Entry 
            x:Name="userEntry"
            Placeholder="jdoe"
            Text="{Binding serverModel.User, Mode=TwoWay}"
        />

        <Label Text="Public IP Address" />
        <Entry 
            x:Name="publicIpEntry"
            Placeholder="127.0.0.1:80"
            Text="{Binding serverModel.PublicIP, Mode=TwoWay}"
            IsVisible="{Binding IsExpertMode}"
        />

        <Label Text="SSH Private Key" />
        <Entry 
            x:Name="sshPrivKeyEntry"
            Placeholder="SSH Key"
            Text="{Binding serverModel.SSHPrivateKey, Mode=TwoWay}"
            IsVisible="{Binding IsExpertMode}"
        />
        <buttons:NavigationButtonGroup
            NextRoute="//Hosting"
            BackRoute="///DNS"
        />
    </VerticalStackLayout>
</ContentPage>