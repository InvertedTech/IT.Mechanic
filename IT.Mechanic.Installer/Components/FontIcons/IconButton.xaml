<?xml version="1.0" encoding="utf-8" ?>
<ContentView x:Name="this"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:icons="clr-namespace:IT.Mechanic.Installer.Components.FontIcons"
             x:Class="IT.Mechanic.Installer.Components.FontIcons.IconButton"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">
    <Button
        BindingContext="{x:Reference this}"
        BackgroundColor="Transparent"
        ToolTipProperties.Text="{Binding Tooltip}"
        >
        <Button.ImageSource>
            <FontImageSource 
                Glyph="{Binding IconPath}"
                Color="{Binding IconColor, FallbackValue='White'}"
                Size="{Binding IconSize, FallbackValue='20'}"
                FontFamily="{Binding IconFont, FallbackValue='FaRegular'}"/>
        </Button.ImageSource>
    </Button>
</ContentView>
