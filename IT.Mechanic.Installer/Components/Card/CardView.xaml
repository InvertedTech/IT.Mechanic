<?xml version="1.0" encoding="utf-8" ?>
<ContentView x:Name="this"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IT.Mechanic.Installer.Components.Card.CardView" WidthRequest="500" HeightRequest="400">
    <Frame BindingContext="{x:Reference this}"
           BackgroundColor="{Binding CardColor, FallbackValue='Gray'}"
           BorderColor="{Binding BorderColor, FallbackValue='Black'}">
        <StackLayout>
            <Label FontSize="24" Text="{Binding CardTitle, FallbackValue='Card Title'}" TextColor="{Binding TitleColor, FallbackValue='White'}"/>
        </StackLayout>
    </Frame>
</ContentView>
