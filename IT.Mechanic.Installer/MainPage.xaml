<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IT.Mechanic.Installer.MainPage"
             xmlns:profile="clr-namespace:IT.Mechanic.Installer.Components.Profile"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:Icons="clr-namespace:IT.Mechanic.Installer.Components.FontIcons"
             Title="Recent Profiles:">
    <VerticalStackLayout Spacing="30" Margin="50">

        <profile:ProfileListItem
            ItemTitle="Example"/>
        <Button
            Text="Create Profile"
            HorizontalOptions="Center"
            VerticalOptions="End"
            TextColor="MintCream"
            BackgroundColor="LightSlateGray"
            Clicked="OnStartClicked"/>
    </VerticalStackLayout>
</ContentPage>
